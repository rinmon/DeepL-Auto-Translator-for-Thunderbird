{
  "manifest_version": 2,
  "name": "DeepL Auto Translator for Thunderbird",
  "version": "0.9.1",
  "description": "Automatically translates English messages using DeepL",
  "author": "Your Name",
  "applications": {
    "gecko": {
      "id": "deepl-translator@example.com",
      "strict_min_version": "91.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "permissions": [
    "storage",
    "messagesRead",
    "messagesModify",
    "menus",
    "https://api.deepl.com/*"
  ],
  "message_display_action": {
    "default_title": "Translate with DeepL",
    "default_icon": "icons/translate-32.png"
  },
  "icons": {
    "32": "icons/translate-32.png",
    "48": "icons/translate-48.png",
    "96": "icons/translate-96.png"
  }
}
